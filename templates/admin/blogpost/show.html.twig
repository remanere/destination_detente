{% extends 'base.html.twig' %}

{% block title %}Blogpost{% endblock %}

{% block body %}
    <h1>Blogpost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogpost.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blogpost.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ blogpost.contenu }}</td>
            </tr>
            <tr>
                <th>CreatAt</th>
                <td>{{ blogpost.creatAt ? blogpost.creatAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image_path</th>
                <td>{{ blogpost.imagePath }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blogpost.date ? blogpost.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blogpost_index') }}">back to list</a>

    <a href="{{ path('blogpost_edit', {'id': blogpost.id}) }}">edit</a>

    {{ include('blogpost/_delete_form.html.twig') }}
{% endblock %}
