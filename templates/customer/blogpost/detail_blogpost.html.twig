{% extends "base.html.twig" %}

{% block body %}

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://destinationdetente.weebly.com/uploads/4/8/5/6/48562933/4871460_orig.jpg" class="d-block w-100 imageCarousel" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://destinationdetente.weebly.com/uploads/4/8/5/6/48562933/5411401_orig.jpg" class="d-block w-100 imageCarousel" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://destinationdetente.weebly.com/uploads/4/8/5/6/48562933/6045250_orig.jpg" class="d-block w-100 imageCarousel" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

  <section>
      <div class="container py-5">
        <div class="row">
     
              {% include "_messages_flash.html.twig" %}

            <div class="col-sm-6 col-md-6">

                <div class="card">
                   <div class="card bg-dark">
                    <img src="{{ blogpost.imagePath }}" class="card-img imageDetailProduct" alt="image_category">
                </div>
                
            </div>
            </div>
            <div class="col-sm-12 col-md-6">

                   <h5 class="card-title">{{ blogpost.titre }}</h5>
          
            <p>{{ blogpost.contenu }}</p>
            <a class="btn btn-outline-dark" href="#">informations et inscription</a>
            <hr>
                  <a class="btn btn-outline-dark" href="{{ path('home') }}">Revenir à l'accueil</a>
                  <a class="btn btn-outline-dark" href="{{ path('boutique_blogpost_show_by_onglet',{'id': blogpost.id}) }}">Revenir à la page précédente</a>
                       
            </div>

        </div>
    </div>

  </section>

   <section>
 
    <div class="container py-5">
      <hr>
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">Suggestions</h3>
            </div>  

            {% for blogpost in suggestedBlogposts %}

                <div class="col-sm-12 col-md-6 col-lg-3 mt-3">

                    <div class="card bg-dark text-dark text-center">
                        <img src="{{ blogpost.imagePath }}" class="card-img imageCard" alt="image_category">
                        <div class="card-img-overlay">
                            <h5 class="card-title">{{ blogpost.titre }}</h5>
                            <a href="{{ path('boutique_blogpost_detail',{'id': blogpost.id} ) }}" class="btn btn-outline-light">Consulter</a>
                        </div>
                    </div>
            
                </div>
                
            {% endfor %}

        </div>
    </div>
  </section>

{% endblock %}