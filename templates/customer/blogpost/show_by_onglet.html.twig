{% extends "base.html.twig" %}

{% block body %}

  <section>
  <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">{{ onglet.name }}</h3>
        </div>  

          <div class="col-12 d-flex">
                    <a href="{{ path('customer_onglet_index') }}" class="btn btn-secondary btn-lg btn-block">Retour aux onglets</a>
                </div>

        {% for blogpost in onglet.blogposts %}

            <div class="col-sm-12 col-md-6 col-lg-4 mt-3">

                  <div class="card bg-dark text-white">
                    <img src="{{ blogpost.imagePath }}" class="card-img imageCard" alt="image_category">
                    <div class="card-img-overlay">
                        <h5 class="card-title">{{ blogpost.name }}</h5>
                        <a href="{{ path('boutique_blogpost_detail',{'id': blogpost.id} ) }}" class="btn btn-outline-light w-100">Consulter</a>
                    </div>
                </div>
        
            </div>
            
        {% endfor %}

    </div>
     </div>
  </section>
   


{% endblock %}